<form action="/login" class="pure-form pure-form-stacked" method="post">
  <%= Rack::Csrf.csrf_tag(env) %>
  <label for="email"> Email:
  <input id="email" type="text" name="user[email]">
  </label><br />
  <label for="password"> Password:
  <input id="password" type="password" name="user[password]">
  </label><br />
  <input type="submit" class="pure-button pure-button-primary" value="Bejelentkezés">
</form>
<br />
<a class="pure-button" href="users/new">Új felhasználó létrehozása</a>

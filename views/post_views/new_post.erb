
<h2>Új blog bejegyzés</h2>
<form action="/blog" id="blog-form" class="pure-form pure-form-stacked" method="post">
  <%= Rack::Csrf.csrf_tag(env) %>
  <label for="post_title">Cím:</label><br />
  <input id="post_title" name="post[title]" placeholder="Blog bejegyzés címe" type="text"/>
  <br />
 
  <label for="post_body">Tartalom:</label><br />
  <textarea id="post_body" name="post[body]" rows="40" cols="55"></textarea>
  <br />
  
  <input type="hidden" name="post[is_deleted]" value="<%= false %>" />
 
  <input type="submit" class="pure-button pure-button-primary" value="Blog bejegyzés létrehozása" />


  <script>
    CKEDITOR.replace( 'post_body',
        {
		language: 'hu'
	});
  </script>
</form>


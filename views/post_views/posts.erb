<% unless @posts[0] == nil %>
<% @posts.each do |post| %>

    <h2><a href="/blog/<%= post.id %>"><%= post.title %></a></h2>
    <div class="entrytext">
    <p><%= post.body %></p>
    </div>

<% end %>
<% end %>
<% if env['warden'].authenticated? %>
<br/ >
<a class="pure-button" href="/blog/new">Új blog bejegyzés</a>
<% end %>
